.card
  .card-default.card-body
    = form_for @post do |f|
      - if @post.errors.any?
        #error_explanation
          h2 = "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
          ul
            - @post.errors.full_messages.each do |message|
              li = message
      strong Title
      br
      = f.text_field :title, class: 'mb-3 form-control form-control-lg'
      form.form-inline
        .row
          .col-sm-6
            .form-group
              div data-vue-model="#{{ post: @post.content }.to_json}"
              = f.text_area :content, "v-model": "post", class: "form-control wysiwyg mt-3", style: "height:250px; max-height:500px;"
          .col-sm-6
            .form-group
              markdown-component(v-model="post")
      .actions
        = f.submit '送信する', class: 'btn btn-large btn-primary'
