doctype html
html
  head
    meta content=("text/html; charset=UTF-8") http-equiv="Content-Type" /
    meta content='width=device-width, initial-scale=1, maximum-scale=1' name='viewport'
    title Grizzly
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'base'
    = stylesheet_link_tag    'application', media: 'all', id: 'maincss'
    = stylesheet_link_tag 'angle/themes/theme-f'
    = yield :vendor_css_area
    / = javascript_pack_tag params[:controller]
  body id=params[:action]
    .wrapper
      header.topnavbar-wrapper
        = render 'layouts/partial/header'
      aside.aside-container
        = render 'layouts/partial/sidebar'
      section.section-container
        .content-wrapper
          = yield
      footer.footer-container
        = render 'layouts/partial/footer'
= javascript_pack_tag 'posts'
= javascript_include_tag 'application'
= javascript_include_tag 'base'
= favicon_link_tag 'kuma_favicon.png'
= javascript_include_tag 'base'
= yield :vendor_js_area
= yield :body_area
